package data;

import org.newdawn.slick.opengl.Texture;
import static helpers.Artist.*;
import static helpers.Clock.*;

import java.util.ArrayList;

public class TowerCannon {

	private float x, y, tSLS, fireRate;  //tSLS - timeSinceLastShot;
	private int width, height, damage;
	private Texture baseTexture, cannonTexture;
	private Tile startTile;
	private ArrayList<Projectile> projectiles;

	public TowerCannon(Texture baseTexture, Tile startTile, int damage) {
		this.baseTexture = baseTexture;
		this.cannonTexture = QuickLoad("cannonGun");
		this.startTile = startTile;
		this.x = startTile.getX();
		this.y = startTile.getY();
		this.width = (int) startTile.getWidth();
		this.height = (int) startTile.getHeight();
		this.damage = damage;
		this.fireRate = 30;
		this.tSLS = 0;
		this.projectiles = new ArrayList<Projectiles>();

	}

	private void fire() {
		tSLS = 0;
	}
	
	public void update() {
		tSLS += Delta();
		if(tSLS > fireRate){
			fire();
		}
	}

	public void draw() {
		DrawQuadText(baseTexture, x, y, width, height);
		DrawQuadText(cannonTexture, x, y, width, height);

	}

}
