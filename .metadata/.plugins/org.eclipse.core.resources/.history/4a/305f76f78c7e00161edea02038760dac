package data;

import static helpers.Artist.QuickLoad;

public class Game {

	private TileGrid grid;
	private Player player;
	private Wave wave;
	
	//TEMP VARS
	
	
	public Game (int[][] map) {
		grid = new TileGrid(map);
		player = new Player(grid);
		wave = new Wave(20, new Enemy(QuickLoad("enemy1"), grid.GetTile(10, 8), grid, 64, 64, 5));
	}
	
	public void update() {
		grid.Draw();
		wave.Update();
		player.Update();
	}
}
