package data;

import static helpers.Artist.BeginSession;
import static helpers.Artist.DrawQuadText;

import org.lwjgl.opengl.Display;

public class Boot {

	public Boot() {

		BeginSession();

		Tile tile = new Tile(0,0,64,64, TileType.Grass);
		Tile tile2 = new Tile(64,64,64,64, TileType.Dirt);
		
		
		while (!Display.isCloseRequested()) {
			
			DrawQuadText(tile.getTexture(), tile.getX(), tile.getY(), tile.getWidth(), tile.getHeight();

			Display.update();
			Display.sync(60);

		}

		Display.destroy();
	}

	public static void main(String[] args) {
		new Boot();
	}
}
